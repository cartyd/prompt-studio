// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// DATABASE_URL configuration notes:
// - Development: Use relative paths (e.g., "file:./dev.db")
// - Production: Use absolute paths to avoid path resolution issues
//   Example: "file:/var/www/prompt-studio/prisma/data/prod.db"
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                    String    @id @default(cuid())
  name                  String
  email                 String    @unique
  passwordHash          String
  lastPasswordChange    DateTime  @default(now())
  isAdmin               Boolean   @default(false)
  emailVerified         Boolean   @default(false)
  emailVerifiedAt       DateTime?
  subscriptionTier      String    @default("free") // "free" | "premium"
  subscriptionExpiresAt DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  prompts             Prompt[]
  customCriteria      CustomCriteria[]
  events              Event[]
  verificationTokens  VerificationToken[]
  emailChangeRequests EmailChangeRequest[]
}

model Prompt {
  id              String   @id @default(cuid())
  userId          String
  frameworkType   String   // "ToT" | "SelfConsistency" | "CoT" | "Role" | "Reflection"
  title           String
  finalPromptText String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CustomCriteria {
  id           String   @id @default(cuid())
  userId       String
  criteriaName String
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, criteriaName])
}

model Event {
  id         String   @id @default(cuid())
  userId     String?
  eventType  String   // "login", "framework_view", "prompt_generate", "prompt_save"
  metadata   String?  // JSON string with additional data (e.g., {"frameworkId": "tot"})
  
  // Traffic source tracking
  userAgent  String?  // Full user agent string
  deviceType String?  // 'mobile' | 'tablet' | 'desktop' | 'bot' | 'unknown'
  browser    String?  // Browser name and version
  os         String?  // Operating system
  
  // Geographic tracking
  ipAddress  String?  // User's IP address
  country    String?  // Country code (e.g., 'US', 'GB')
  region     String?  // State/province
  city       String?  // City name
  
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
  @@index([deviceType])
  @@index([country])
}

model VerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  type      String   // "email_verification" | "password_reset"
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId, type])
}

model EmailChangeRequest {
  id             String   @id @default(cuid())
  userId         String
  oldEmail       String
  newEmail       String
  verifyToken    String   @unique
  revokeToken    String   @unique
  verified       Boolean  @default(false)
  expiresAt      DateTime
  createdAt      DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([verifyToken])
  @@index([revokeToken])
}
