<% const title = 'Premium'; %>
<%- include('layout-wrapper', { body: `
<div class="content-container-lg">
  <h2 class="text-center mb-2">Upgrade to Premium</h2>

  ${subscription.isPremium ? `
    <div class="success text-center" style="font-size: 1.25rem; padding: 2rem;">
      <strong>You are currently a Premium member!</strong>
      <p class="mt-0-5">Enjoy unlimited saved prompts and exports.</p>
    </div>
  ` : `
    <div class="premium-grid">
      <div class="tier-card tier-card-free">
        <h3>Free Tier</h3>
        <ul class="tier-list">
          <li>✓ Access to all frameworks</li>
          <li>✓ Generate unlimited prompts</li>
          <li class="tier-list-unavailable">✗ Save up to 5 prompts only</li>
          <li class="tier-list-unavailable">✗ No export functionality</li>
        </ul>
      </div>

      <div class="tier-card tier-card-premium">
        <h3>Premium <span class="badge badge-premium">Upgrade</span></h3>
        <ul class="tier-list">
          <li>✓ Access to all frameworks</li>
          <li>✓ Generate unlimited prompts</li>
          <li>✓ <strong>Save unlimited prompts</strong></li>
          <li>✓ <strong>Export prompts as files</strong></li>
        </ul>
      </div>
    </div>

    <div class="premium-cta">
      <p class="premium-cta-text">For testing purposes, you can upgrade to premium using the button below.</p>
      <form method="POST" action="/admin/make-premium">
        <input type="hidden" name="_csrf" value="${csrfToken}">
        <button type="submit" class="btn btn-large">Upgrade to Premium (Test)</button>
      </form>
    </div>
  `}
</div>
` }) %>
