<% const title = '500 - Internal Server Error'; %>
<%- include('../layout-wrapper', { body: `
<div class="error-page">
  <i class='bx bx-bug error-icon error-icon-danger-blink' aria-hidden="true"></i>
  <div class="error-code error-code-danger">500</div>
  <h1 class="error-title">Internal Server Error</h1>
  <p class="error-message">
    ${message || "Something went wrong on our end. We're working to fix it. Please try again later."}
  </p>
  <div class="error-actions">
    <a href="/" class="error-btn error-btn-primary">
      <i class='bx bx-home'></i>
      Go Home
    </a>
    ${ user ? `
    <a href="/frameworks" class="error-btn error-btn-secondary">
      <i class='bx bx-frame'></i>
      Frameworks
    </a>
    ` : `
    <a href="/about" class="error-btn error-btn-secondary">
      <i class='bx bx-info-circle'></i>
      Learn More
    </a>
    ` }
  </div>
</div>
` }) %>
