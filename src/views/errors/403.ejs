<% const title = '403 - Access Denied'; %>
<%- include('../layout-wrapper', { body: `
<div class="error-page">
  <i class='bx bx-block error-icon error-icon-warning' aria-hidden="true"></i>
  <div class="error-code error-code-warning">403</div>
  <h1 class="error-title">Access Denied</h1>
  <p class="error-message">
    ${message || "You don't have permission to access this page. Please contact an administrator if you believe this is an error."}
  </p>
  <div class="error-actions">
    <a href="/" class="error-btn error-btn-primary">
      <i class='bx bx-home'></i>
      Go Home
    </a>
    ${ user ? `
    <a href="/frameworks" class="error-btn error-btn-secondary">
      <i class='bx bx-frame'></i>
      Frameworks
    </a>
    ` : `
    <a href="/about" class="error-btn error-btn-secondary">
      <i class='bx bx-info-circle'></i>
      Learn More
    </a>
    ` }
  </div>
</div>
` }) %>
