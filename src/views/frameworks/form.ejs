  border-radius: 8px;
  font-size: 0.95rem;
  cursor: pointer;
  transition: background 0.2s ease, border-color 0.2s ease;
  text-align: center;
}

#add-custom-btn:hover {
  background: #ecf6ff;
  border-color: #2980b9;
}

.custom-input-container {
  margin-top: 1rem;
  display: none;
  flex-direction: column;
  gap: 14px;
}

#custom-criteria-input {
  width: 100%;
  padding: 0.6rem 0.75rem;
  border: 1px solid #cdd6e0;
  border-radius: 6px;
  font-size: 0.95rem;
  background: #ffffff;
  transition: 0.2s;
}

#custom-criteria-input:focus {
  border-color: #3498db;
  outline: none;
}

.custom-btn-row {
  display: flex;
  justify-content: space-between;
  gap: 12px;
}

.custom-btn-row button {
  flex: 1;
  height: 44px;
  font-size: 0.95rem;
  padding: 0 1rem;
  border-radius: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  box-sizing: border-box;
}

.custom-input-actions {
  display: flex;
  gap: 0.5rem;
  align-items: start;
  flex-wrap: wrap;
}

.custom-input-field {
  flex: 1;
  min-width: 200px;
}

.custom-input-actions button {
  min-height: var(--touch-target-min);
  white-space: nowrap;
}

/* Form Actions */
.form-actions {
  display: flex;
  gap: 0.6rem;
  margin-top: 1rem;
}

.form-actions .btn {
  flex: 1;
  background: #3498db;
  color: white;
  border: none;
  border-radius: 6px;
  padding: 0.7rem 1rem;
  cursor: pointer;
  font-size: 0.95rem;
  transition: 0.2s;
}

.form-actions .btn:hover {
  background: #2d89ca;
}

.form-actions .btn-secondary {
  background: #ecf0f1;
  color: #34495e;
}

.form-actions .btn-secondary:hover {
  background: #dfe6e9;
}

@media (min-width: 768px) {
  .custom-input-container {
    flex-direction: row;
    align-items: center;
    gap: 1rem;
  }
}

/* Preview Section */
.prompt-preview {
  background: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 10px;
  padding: 1.5rem;
  min-height: 300px;
  line-height: 1.6;
  font-size: 0.95rem;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.copy-btn {
  background: #3498db;
  color: white;
  padding: 0.6rem 1rem;
  border-radius: 4px;
  border: none;
  cursor: pointer;
  font-size: 0.95rem;
  transition: 0.2s;
  margin-top: 1rem;
  width: 100%;
}

.copy-btn:hover {
  background: #2980b9;
}

.save-section {
  background: #fff;
  padding: 1rem 1.2rem;
  border-radius: 8px;
  margin-top: 1.2rem;
  border: 1px solid #e0e0e0;
}

.save-section .form-group {
  margin-bottom: 0.8rem;
}

.save-btn {
  background: #3498db;
  color: white;
  padding: 0.6rem 1rem;
  border-radius: 4px;
  border: none;
  cursor: pointer;
  font-size: 0.95rem;
  transition: 0.2s;
  margin-top: 1rem;
  width: 100%;
}

.save-btn:hover {
  background: #2980b9;
}

/* Templates Section */
.templates-section {
  margin-top: 2rem;
  position: sticky;
  top: 1rem;
  background: transparent !important;
  border: none !important;
  padding: 0 !important;
  box-shadow: none !important;
}

.templates-container {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.template-card {
  background: #ffffff;
  border: 1px solid #e6e9ef;
  border-radius: 8px;
  padding: 1rem;
  cursor: pointer;
  transition: 0.25s ease;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.template-card:hover {
  border-color: #3498db;
  box-shadow: 0 4px 14px rgba(52, 152, 219, 0.12);
  transform: translateY(-2px);
}

.template-card.selected {
  border-color: #3498db;
  background: #f4faff;
  box-shadow: 0 4px 16px rgba(52, 152, 219, 0.18);
}

.template-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.template-category {
  font-size: 0.75rem;
  padding: 0.25rem 0.6rem;
  border-radius: 4px;
  background: #f1f5f9;
  color: #555;
}

.template-category.personal {
  background: #fdecef;
  color: #c62828;
}

.template-category.business {
  background: #eaf4ff;
  color: #1565c0;
}

.template-category.technical {
  background: #eef9f0;
  color: #2e7d32;
}

.template-indicator {
  width: 20px;
  height: 20px;
  border: 2px solid #c3c7d1;
  border-radius: 50%;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: 0.25s ease;
  font-size: 14px;
  color: transparent;
}

.template-indicator::before {
  content: "‚úî";
  opacity: 0;
  transition: 0.25s;
  transform: scale(0);
}

.template-card.selected .template-indicator {
  border-color: #3498db;
  background: #3498db;
  color: #fff;
}

.template-card.selected .template-indicator::before {
  opacity: 1;
  transform: scale(1);
}

.template-card h4 {
  margin: 0;
  font-size: 1rem;
  color: #2c3e50;
}

.template-card p {
  margin: 0;
  color: #7f8c8d;
  font-size: 0.85rem;
}

/* Modal */
.modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  justify-content: center;
  align-items: center;
  animation: fadeIn 0.3s;
  z-index: 1000;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  position: relative;
  background: #fff;
  border-radius: 10px;
  padding: 60px 30px;
  max-width: 600px;
  max-height: 90%;
  overflow-y: auto;
  transform: translateY(-20px);
  animation: slideDown 0.3s forwards;
  z-index: 1001;
}

@keyframes slideDown {
  from {
    transform: translateY(-20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-message {
  white-space: pre-wrap;
  font-size: 1rem;
  color: #2c3e50;
  margin-bottom: 20px;
}

.modal-btn-row {
  display: flex;
  justify-content: flex-end;
  gap: 0.5rem;
}

.modal-btn-row .btn {
  flex: 0 0 auto;
  min-width: 100px;
  background: #3498db;
  color: white;
  border: none;
  border-radius: 6px;
  padding: 0.75rem 1.5rem;
  cursor: pointer;
  font-size: 1rem;
  transition: 0.2s;
}

.modal-btn-row .btn:hover {
  background: #2d89ca;
}

.modal-btn-row .btn-secondary {
  background: #ecf0f1;
  color: #34495e;
}

.modal-btn-row .btn-secondary:hover {
  background: #dfe6e9;
}

.modal-close-btn {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 1.5rem;
  color: #888;
  background: transparent;
  border: none;
  cursor: pointer;
  z-index: 1002;
}

.modal-close-btn:hover {
  color: #333;
}

/* Tablet and up (768px+) */
@media (min-width: 768px) {
  .form-layout {
    grid-template-columns: 1fr 1fr;
  }
  
  .templates-section {
    grid-column: 1 / -1;
    margin-top: 2rem;
  }
  
  .templates-container {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }
  
  .form-actions {
    flex-wrap: nowrap;
  }
  
  .form-actions .btn:first-child {
    flex: 1;
  }
  
  .custom-input-actions {
    flex-wrap: nowrap;
  }
}

/* Desktop and up (1024px+) */
@media (min-width: 1024px) {
  .form-layout.has-templates {
    /* Form | Preview | Templates */
    grid-template-columns: 1.2fr 1fr 0.8fr;
  }
  
  .templates-section {
    grid-column: auto;
    margin-top: 0;
    position: sticky;
    top: 1rem;
    max-height: calc(100vh - 2rem);
    overflow-y: auto;
    padding-right: 0.5rem;
  }
  
  .templates-container {
    grid-template-columns: 1fr;
  }
  
  /* Custom scrollbar for template sidebar */
  .templates-section::-webkit-scrollbar {
    width: 6px;
  }
  
  .templates-section::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 3px;
  }
  
  .templates-section::-webkit-scrollbar-thumb {
    background: #cbd5e0;
    border-radius: 3px;
  }
  
  .templates-section::-webkit-scrollbar-thumb:hover {
    background: #a0aec0;
  }
}
</style>
