<style>
/* ==========  FRAMEWORK FORM RESPONSIVE STYLES  ========== */
.framework-container {
  max-width: 1200px;
  margin: 0 auto;
  width: 100%;
}

/* Admin Header Style */
.admin-header {
  width: 100%;
  background: none;
  margin: 0 0 2rem;
}

.admin-header-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
  gap: 1rem;
  flex-wrap: wrap;
}

.admin-header-left h1 {
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--color-dark);
  margin: 0 0 0.3rem 0;
}

.admin-header-left p {
  margin: 0;
  font-size: 1rem;
  color: #666;
}

.admin-header-right {
  display: flex;
  align-items: center;
}

.btn-secondary {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.6rem 1rem;
  background: #bdc3c7;
  color: #fff;
  border: none;
  border-radius: 4px;
  text-decoration: none;
  font-size: 0.95rem;
  cursor: pointer;
  transition: background 0.2s;
}

.btn-secondary:hover {
  background: #95a5a6;
}

@media (max-width: 768px) {
  .admin-header-container {
    flex-direction: column;
  }
  
  .admin-header-left h1 {
    font-size: 1.5rem;
  }
}

/* Examples Section */
.examples-section {
  margin: 2rem 0;
  width: 100%;
}

.toggle-examples-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #3498db;
  border: none;
  border-radius: 10px;
  padding: 1rem 1.2rem;
  width: 100%;
  cursor: pointer;
  transition: all 0.3s ease;
}

.toggle-examples-btn:hover {
  background: #2980b9;
}

.toggle-left {
  display: flex;
  align-items: center;
  gap: 1rem;
  color: #fff;
}

.toggle-icon-large {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 3rem;
  height: 3rem;
