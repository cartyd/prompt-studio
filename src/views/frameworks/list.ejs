<% const title = 'Frameworks'; %>
<%- include('../layout-wrapper', { body: `
<style>
  .frameworks-header {
    margin-bottom: 2rem;
  }
  
  .framework-card {
    padding: 1.5rem;
    border: 2px solid var(--color-primary);
    border-radius: 8px;
    transition: transform 0.2s, box-shadow 0.2s;
    display: flex;
    flex-direction: column;
  }
  
  .framework-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(52, 152, 219, 0.2);
  }
  
  .framework-card h3 {
    margin-bottom: 0.5rem;
  }
  
  .framework-card p {
    margin-bottom: 1rem;
    color: var(--color-text-light);
    flex: 1;
  }
  
  .framework-card .btn {
    min-height: var(--touch-target-min);
  }
</style>

<h2 class="frameworks-header">Prompting Frameworks</h2>

<div class="grid grid-lg-auto-fit grid-gap-lg">
  ${frameworks.map(f => `
    <div class="framework-card">
      <h3>${f.name}</h3>
      <p>${f.description}</p>
      <a href="/frameworks/${f.id}" class="btn">Create Prompt</a>
    </div>
  `).join('')}
</div>
`, user, subscription }) %>
