<% const title = 'Login'; %>
<%- include('../layout-wrapper', { body: `
<div class="auth-container">
  <h2 class="auth-title">Login</h2>

  ${error ? `<div class="error" role="alert" aria-live="polite">${error}</div>` : ''}

  <form method="POST" action="/auth/login" aria-label="Login form">
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required autocomplete="email" aria-required="true">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" required autocomplete="current-password" aria-required="true">
      <div class="text-right mt-0-5">
        <a href="/auth/forgot-password" class="auth-link">Forgot password?</a>
      </div>
    </div>

    <button type="submit" class="btn w-full" aria-label="Submit login">Login</button>
  </form>

  <p class="auth-footer-text">
    Don't have an account? <a href="/auth/register">Register here</a>
  </p>
</div>
`, user }) %>
