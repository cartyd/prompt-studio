<% const title = 'Register'; %>
<%- include('../layout-wrapper', { body: `
<div class="auth-container">
  <h2 class="auth-title">Create Account</h2>

  ${error ? `<div class="error" role="alert" aria-live="polite">${error}</div>` : ''}

  <form method="POST" action="/auth/register" aria-label="Registration form">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" required autocomplete="name" aria-required="true">
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required autocomplete="email" aria-required="true">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" minlength="8" required autocomplete="new-password" aria-required="true" aria-describedby="password-hint">
      <small id="password-hint" class="password-hint">Minimum 8 characters</small>
    </div>

    <button type="submit" class="btn w-full" aria-label="Submit registration">Register</button>
  </form>

  <p class="auth-footer-text">
    Already have an account? <a href="/auth/login">Login here</a>
  </p>
</div>
`, user }) %>
