<% const title = 'Forgot Password'; %>
<%- include('../layout-wrapper', { body: `
<div style="max-width: 500px; margin: 0 auto;">
  <h2 style="margin-bottom: 1.5rem;">Forgot Password</h2>

  ${error ? `<div class=\"error\">${error}</div>` : ''}
  ${success ? `<div class=\"success\">${success}</div>` : ''}

  ${success ? `
    <div style=\"margin: 1rem 0;\" class=\"text-muted\">If an account exists with that email, we've sent instructions. Please check your inbox and spam folder.</div>
    <div class=\"flex gap-sm\" style=\"margin-top: 1rem;\">
      <a href=\"/auth/login\" class=\"btn\" style=\"width: 100%;\">Back to Login</a>
    </div>
  ` : `
    <p style=\"margin-bottom: 1.5rem; color: #7f8c8d;\">
      Enter your email address and we'll send you instructions to reset your password.
    </p>

    <form method=\"POST\" action=\"/auth/forgot-password\">
      <input type=\"hidden\" name=\"_csrf\" value=\"${csrfToken}\">
      
      <div class=\"form-group\">
        <label for=\"email\">Email Address</label>
        <input type=\"email\" id=\"email\" name=\"email\" required autofocus>
      </div>

      <button type=\"submit\" class=\"btn\" style=\"width: 100%;\">Send Reset Instructions</button>
    </form>

    <p style=\"margin-top: 1.5rem; text-align: center;\">
      <a href=\"/auth/login\">Back to Login</a>
    </p>
  `}
</div>
`, user }) %>
