<% const title = 'Reset Password'; %>
<%- include('../layout-wrapper', { body: `
<div style="max-width: 500px; margin: 0 auto;">
  <h2 style="margin-bottom: 1.5rem;">Reset Your Password</h2>

  ${error ? \`<div class="error">\${error}</div>\` : ''}

  <p style="margin-bottom: 1.5rem; color: #7f8c8d;">
    Enter your new password below.
  </p>

  <form method="POST" action="/auth/reset-password">
    <input type="hidden" name="_csrf" value="${csrfToken}">
    <input type="hidden" name="token" value="${token}">
    
    <div class="form-group">
      <label for="password">New Password</label>
      <input type="password" id="password" name="password" minlength="8" required autofocus>
      <small style="color: #7f8c8d;">Minimum 8 characters</small>
    </div>

    <div class="form-group">
      <label for="confirmPassword">Confirm New Password</label>
      <input type="password" id="confirmPassword" name="confirmPassword" minlength="8" required>
    </div>

    <button type="submit" class="btn" style="width: 100%;">Reset Password</button>
  </form>

  <p style="margin-top: 1.5rem; text-align: center;">
    <a href="/auth/login">Back to Login</a>
  </p>
</div>
`, user }) %>
