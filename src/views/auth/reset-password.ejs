<% const title = 'Reset Password'; %>
<%- include('../layout-wrapper', { body: `
<div class="auth-container">
  <h2 class="auth-title">Reset Your Password</h2>

  ${error ? `<div class="error">${error}</div>` : ''}

  <p class="mb-1-5 text-muted">
    Enter your new password below.
  </p>

  <form method="POST" action="/auth/reset-password">
    <input type="hidden" name="_csrf" value="${csrfToken}">
    <input type="hidden" name="token" value="${token}">
    
    <div class="form-group">
      <label for="password">New Password</label>
      <input type="password" id="password" name="password" minlength="8" required autofocus>
      <small class="password-hint">Minimum 8 characters</small>
    </div>

    <div class="form-group">
      <label for="confirmPassword">Confirm New Password</label>
      <input type="password" id="confirmPassword" name="confirmPassword" minlength="8" required>
    </div>

    <button type="submit" class="btn w-full">Reset Password</button>
  </form>

  <p class="auth-footer-text" style="margin-top: 1.5rem;">
    <a href="/auth/login">Back to Login</a>
  </p>
</div>
`, user }) %>
