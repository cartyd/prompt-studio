{
  "name": "prompt-framework-studio",
  "version": "0.1.3",
  "description": "A web application for creating structured LLM prompts using different prompting frameworks",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && cp -r src/views dist/",
    "version:patch": "tsx scripts/bump-version.ts patch",
    "version:minor": "tsx scripts/bump-version.ts minor",
    "version:major": "tsx scripts/bump-version.ts major",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm test && npm run test:e2e",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "reset-dev-users": "tsx scripts/reset-dev-users.ts",
    "view:users": "node scripts/view-users.js",
    "ops:verify-existing-users": "tsx scripts/verify-existing-users.ts"
  },
  "keywords": [
    "fastify",
    "typescript",
    "htmx",
    "prisma",
    "llm",
    "prompts",
    "ai-automation",
    "prompt-engineering"
  ],
  "author": "Dave Carty <https://simplicate.ai>",
  "license": "MIT",
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/session": "^11.1.1",
    "@fastify/static": "^8.3.0",
    "@fastify/view": "^11.1.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^5.20.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "fastify": "^5.0.0",
    "fastify-plugin": "^4.5.1",
    "fastify-session-better-sqlite3-store": "^2.1.2",
    "geoip-lite": "^1.4.10",
    "isomorphic-fetch": "^3.0.0",
    "marked": "^17.0.1",
    "typescript": "^5.6.3",
    "ua-parser-js": "^2.0.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/ejs": "^3.1.5",
    "@types/geoip-lite": "^1.4.4",
    "@types/isomorphic-fetch": "^0.0.39",
    "@types/jest": "^29.5.13",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.19.1",
    "@types/ua-parser-js": "^0.7.39",
    "jest": "^29.7.0",
    "prisma": "^5.20.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1"
  }
}
