{
  "name": "prompt-framework-studio",
  "version": "1.0.0",
  "description": "A web application for creating structured LLM prompts using different prompting frameworks",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm test && npm run test:e2e",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "fastify",
    "typescript",
    "htmx",
    "prisma",
    "llm",
    "prompts",
    "ai-automation",
    "prompt-engineering"
  ],
  "author": "Dave Carty <https://simplicate.ai>",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/session": "^11.1.1",
    "@fastify/static": "^8.3.0",
    "@fastify/view": "^11.1.1",
    "@prisma/client": "^5.20.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.5.0",
    "ejs": "^3.1.10",
    "fastify": "^5.0.0",
    "fastify-plugin": "^4.5.1",
    "fastify-session-better-sqlite3-store": "^2.1.2",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.19.1",
    "jest": "^29.7.0",
    "prisma": "^5.20.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1"
  }
}
